.sidebar
    & a
        text-decoration none
    .sidebar-nav.navbar-collapse
        padding-left 0
        padding-right 0

.sidebar ul li
    text-align center
    a
        &.active
            background-color lighten($gray-lighter, 5%)

@media(min-width: 768px)
    .sidebar
        z-index 1
        position absolute
        width $sidebar-width
        margin-top 51px

.sidebar-nav
    ul
        padding 0
        margin 0
        list-style none
        background $sidebar-bg
    .metismenu
        display -webkit-box
        display -ms-flexbox
        display flex
        flex-direction column
        & > li
            flex 1 1 0%
            display flex
            flex-direction column
            position relative
        & i.fa
            font-size 18px

        & a,
        & span
            position relative
            display block
            padding 15px
            text-align center
            color $sidebar-color
            outline-width 0
            transition all .3s ease-out
        & .nav-second-level
            & a,
            span
                text-align left !important
                padding-bottom 16px

.sidebar-nav .metismenu a:hover,
.sidebar-nav .metismenu a:active
    color #fff
    text-decoration none
    background lighten($sidebar-bg, 15%)

@media (min-width: 768px)
    .sidebar-nav
        .metismenu
            & .nav.nav-second-level
                display none
            li
                position relative
            & > li
                & > ul
                    position absolute
                    left 100%
                    top 0
                    min-width 200px
                    z-index 1001
                &:hover
                    & > ul
                        height auto !important
                    & > a
                        &.has-arrow
                            &:after
                                transform rotate(135deg)

    .sidebar-nav .metismenu > li:hover > ul,
    .sidebar-nav .metismenu > li:hover > ul.collapse
        display block
        
@media (max-width: 767px)
    .sidebar-nav .metismenu a,
    .sidebar-nav .metismenu span
        text-align left !important
        
